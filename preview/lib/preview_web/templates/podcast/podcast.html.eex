
<section id="podcast-header">
  <%= render "_podcast_header.html", podcast: @podcast %>
</section>

<section id="podcast-player">
    <%= render "_podcast_episode_player.html", podcast: @podcast, episode: hd(@episodes) %>
</section>

<section id="episodes">
  <%= for episode <- @episodes do %>
    <%= render "_episode.html", podcast: @podcast, episode: episode %>
  <% end %>
</section>

<%= render PreviewWeb.PageView, "_footer.html", assigns %>
